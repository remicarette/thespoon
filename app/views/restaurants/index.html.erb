<div class="container">
  <h1>Restaurants list</h1>

  <%= link_to "Create a new restaurant", new_restaurant_path, class: "btn btn-primary" %>


  <ol>
    <% @restaurants.each do |restaurant| %>
      <li> <%= restaurant.name %> | (<%= "*" * restaurant.stars %>) <%= link_to 'See details', restaurant_path(restaurant) %> </li>
    <% end %>
  </ol>
</div>